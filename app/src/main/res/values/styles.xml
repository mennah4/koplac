<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#004D40</item>
        <item name="colorAccent">#2979FF</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="layouts">
        <item name="android:background">#ff16907a</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="layoutsWithoutPadding">
        <item name="android:background">#ff16907a</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="layoutsWithoutGravity">
        <item name="android:background">#ff16907a</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="buttons">
        <item name="android:background">@drawable/button_pressed</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>

        <item name="android:textColor">#FFFFFFFF</item>

    </style>

    <style name="buttonBlue">
        <item name="android:background">@drawable/button_pressed2</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>

        <item name="android:textColor">#FFFFFFFF</item>

    </style>
    <style name="buttonOrange">
        <item name="android:background">@drawable/button_pressed_orange</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>

        <item name="android:textColor">#FFFFFFFF</item>

    </style>

    <style name="buttonRED">
        <item name="android:background">@drawable/button_pressed_red</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>

        <item name="android:textColor">#FFFFFFFF</item>

    </style>
    <style name="buttonPurple">
        <item name="android:background">@drawable/button_pressed_purple</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>

        <item name="android:textColor">#FFFFFFFF</item>

    </style>
    <style name="buttonClaretRed">
        <item name="android:background">@drawable/button_pressed_claret_red</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>

        <item name="android:textColor">#FFFFFFFF</item>

    </style>

    <style name="popupButtons">
        <item name="android:background">@drawable/button_pressed</item>

        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">13sp</item>

    </style>

    <style name="editTexts">
        <item name="android:background">#ff1aa187</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">10dp</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textColorHint">#d7d7d8</item>
    </style>

    <style name="textViews">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFFFF</item>

    </style>

    <style name="separators">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">#FFFFFFFF</item>
    </style>

    <style name="lyParameterContainer">
        <item name="android:background">#CF4A30</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="tvParameterName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="tvParameterValue">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="colorPrimaryDark">@android:color/holo_orange_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>