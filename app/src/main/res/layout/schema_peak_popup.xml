<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/curved_corner_layout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"

            android:id="@+id/popPeakname"
            android:layout_gravity="center_horizontal"

            android:text="Peak Name"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/closePopup"
            android:layout_gravity="right"

            android:src="@drawable/close"
            android:background="#ff16907a"/>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:background="#ff1aa187">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/textViewheight"
            android:layout_gravity="left"

            android:text="@string/height"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/popHeight"
            android:layout_gravity="right"

            android:text="0.000 m"/>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:background="#ff1aa187">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/textViewDistance"
            android:layout_gravity="left"

            android:text="@string/distance"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/popDistance"
            android:layout_gravity="right"

            android:text="0.000 m"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/drawRoute"
            style="@style/popupButtons"

            android:layout_width="67dp"


            android:layout_height="wrap_content"
            android:textSize="10sp"

            android:layout_marginRight="5dp"
            android:text="@string/drawRoute" />


        <Button
            android:id="@+id/showDetails"
            style="@style/popupButtons"

            android:layout_width="67dp"
            android:textAllCaps="false"

            android:layout_height="wrap_content"
            android:text="@string/peakDetails" />

    </LinearLayout>

</LinearLayout>