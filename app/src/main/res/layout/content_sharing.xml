        <android.support.v7.widget.CardView
            android:id="@+id/share_app_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"

            app:cardPreventCornerOverlap="false"
            app:contentPadding="4dp">

            <LinearLayout
                android:id="@+id/share_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/side_nav_bar"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"

                    app:srcCompat="@drawable/viskovnice_share"
                    tools:layout_conversion_absoluteHeight="150dp"
                    tools:layout_conversion_absoluteWidth="75dp"
                    tools:layout_conversion_absoluteX="26dp"
                    tools:layout_conversion_absoluteY="280dp" />
                <com.facebook.share.widget.ShareButton
                    android:id="@+id/fb_share_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@color/com_facebook_button_background_color"
                    android:clickable="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:paddingTop="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="false"></com.facebook.share.widget.ShareButton>


            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
